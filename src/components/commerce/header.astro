---
import { Icon } from "astro-iconify";
import { useConstants } from "../../libs/use-constants";
import { SPACING } from "../../constants";
---

<nav>
  <ul>
    <li>
      <button type='button' title='一覧'>
        <Icon name='material-symbols:calendar-view-month' color='white' />
      </button>
    </li>
  </ul>
</nav>
<style define:vars={useConstants({ SPACING })}>
  nav {
    position: fixed;
    width: 100%;
    padding: var(--SPACING_PX12);
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  button {
    width: 40px;
    height: 40px;
    background-color: transparent;
    border: 0;
  }
</style>
