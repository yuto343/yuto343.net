---
import EcLayout from "../layouts/ec-layout.astro";
import { useConstants } from "../libs/use-constants";
import { SPACING, FONT_SIZE } from "../constants";

import bag1 from "../assets/commerce/bag-1.png";
import bag2 from "../assets/commerce/bag-2.png";
import bag3 from "../assets/commerce/bag-3.png";
import bag4 from "../assets/commerce/bag-4.png";
import bag5 from "../assets/commerce/bag-5.png";
import Product from "../components/commerce/product.astro";
import Header from "../components/commerce/header.astro";
---

<EcLayout>
  <Header />
  <ul>
    <Product image={bag1} />
    <Product image={bag2} />
    <Product image={bag3} />
    <Product image={bag4} />
    <Product image={bag5} />
  </ul>
</EcLayout>
<style define:vars={useConstants({ SPACING, FONT_SIZE })}>
  ul {
    padding: 0;
    margin: 0;
    background: linear-gradient(
      180deg,
      #9c8c80 0%,
      #eed8c5 53.7%,
      #eed8c5 100%
    );
    height: 100vh;
    overflow-y: scroll;
    scroll-snap-type: y mandatory;
  }
</style>
